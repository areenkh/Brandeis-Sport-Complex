<div class="data-form">
    <form action="<%=`/events/${event._id}/update?_method=PUT`%>" method="POST">
      <h2>Edit Event - <%= event.title %></h2>
      <label for="inputTitle">Title</label>
      <input type="text" name="title" id="inputTitle" value="<%= event.title %>" placeholder="Title" autofocus required />
      <label for="inputDescription">Description</label>
      <textarea name="description" id="inputDescription" placeholder="Description" required><%= event.description %></textarea>
      <label for="inputLocation">Location</label>
      <input type="text" name="location" id="inputLocation" value="<%= event.location %>" placeholder="Location" required />
      <label for="inputStartDate">Start Date</label>
      <input type="date" name="startDate" id="inputStartDate" value="<%= event.startDate.toISOString().split('T')[0] %>" required />
      <label for="inputEndDate">End Date</label>
      <input type="date" name="endDate" id="inputEndDate" value="<%= event.endDate.toISOString().split('T')[0] %>" required />
      <label for="inputIsOnline">Is Online</label>
      <input type="checkbox" name="isOnline" id="inputIsOnline" <%= event.isOnline ? 'checked' : '' %> />
      <label for="inputRegistrationLink">Registration Link</label>
      <input type="text" name="registrationlink" id="inputRegistrationLink" value="<%= event.registrationlink %>" placeholder="Registration Link" />
      <label for="inputAttendees">Select Attendees</label>
      <select name="attendees" id="inputAttendees" multiple>
        <% users.forEach((user) => { %>
          <option value="<%= user._id %>"><%= user.name %></option>
        <% }); %>
      </select>
      <button type="submit">Update</button>
    </br>
  </br>
</br>
    </form>
  </div>
  