<!--remove drop down list of organizer-->
<h2>Events Table</h2>
<table class="table styled-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Location</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Is Online</th>
      <th>Registration Link</th>
      <th>Organizer</th>
      <th>Attendees</th>
    </tr>
  </thead>
  <tbody>
    <% events.forEach(event => { %>
    <tr>
      <td><a href="<%= `/events/${event._id}` %>"><%= event.title %></a></td>
      <td><%= event.description %></td>
      <td><%= event.location %></td>
      <td><%= event.startDate.toISOString().split('T')[0] %></td>
      <td><%= event.endDate.toISOString().split('T')[0] %></td>
      <td><%= event.isOnline ? 'Yes' : 'No' %></td>
      <td><%= event.registrationlink %></td>
      <td> <% if (event.organizer && event.organizer.name) { %>
        <a href="<%= `/users/${event.organizer._id}` %>"><%= event.organizer.name %></a>
      <% } else { %>
        Organizer Not Available
      <% } %>
      </td>
      <td><%= event.attendees.length %></td>
      <td>
        <a href="<%=`/events/${event._id}/edit`%>">Edit</a>
      </td>
      <td>
        <a href="<%= `/events/${event._id}/delete?_method=DELETE` %>"
           onclick="return confirm('Are you sure you want to delete this job?')">Delete</a>
          </br>
        </br>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
