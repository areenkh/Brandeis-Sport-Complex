<div class="details-container">
<h1>Event Details - <%= event.title %></h1>
<table  class="event-table">
  <tr>
    <th>Title</th>
    <td><%= event.title %></td>
  </tr>
  <tr>
    <th>Description</th>
    <td><%= event.description %></td>
  </tr>
  <tr>
    <th>Location</th>
    <td><%= event.location %></td>
  </tr>
  <tr>
    <th>Start Date</th>
    <td><%= event.startDate.toISOString().split('T')[0] %></td>
  </tr>
  <tr>
    <th>End Date</th>
    <td><%= event.endDate.toISOString().split('T')[0] %></td>
  </tr>
  <tr>
    <th>Is Online</th>
    <td><%= event.isOnline ? 'Yes' : 'No' %></td>
  </tr>
  <tr>
    <th>Registration Link</th>
    <td><%= event.registrationlink %></td>
  </tr>
  <tr>
    <th>Organizer</th>
    <td>
      <% if (event.organizer) { %>
        <a href="<%= `/users/${event.organizer._id}` %>"><%= event.organizer.name %></a>
      <% } else { %>
        Organizer Not Available
      <% } %>
    </td>
  </tr>
  <tr>
    <th>Attendees</th>
    <td>
      <% if (attendees && attendees.length > 0) { %>
        <ul>
          <% attendees.forEach((attendee) => { %>
            <li><a href="<%= `/users/${attendee._id}` %>"><%= attendee.name %></a></li>
          <% }); %>
        </ul>
      <% } else { %>
        No attendees for this event
      <% } %>
    </td>
  </tr>
</table>
<div class="actions">
<div>
  <a href="/events">View all events</a>
</div>
<div>
  <a href="<%=`/events/${event._id}/edit`%>">Edit event Details</a>
</div>
  <div>
  <a
    href="<%= `/events/${event._id}/delete?_method=DELETE` %>"
    onclick="return confirm('Are you sure you want to delete this record?')"
    >Delete</a
  >
</br>
</br>
</br>
</br>
  </div>
</div>

</div>
